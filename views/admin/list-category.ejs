
<%- include("partials/header.ejs") %>

<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>List Categories</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">List Categories</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
            <div class="card-header">
              <h3 class="card-title">List Categories</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="tbl-list-book" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>#ID</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Action</th>
                  
                </tr>
                </thead>
                <tbody>
                   <% categories.forEach(function(data){ %>
                     <tr>
                      <td>
                        <%=  data.id%>
                        </td>
                        <td>
                        <%=  data.name%>
                        </td>
                        <td>
                        <%  if(data.status=="1"){%>
                          <button class="btn btn-success">Active</button>
                          <%}
                          else{%>
                            <button class="btn btn-danger">Inactive</button>
                            <%}
                            %>
                        </td>
                        <td style="display: flex;justify-content: space-evenly;">
                          <a href="/admin/edit-category/<%= data.id%>" class="btn btn-info"><i class="fa fa-edit"></i> </a>

                          <form method="post" action="/admin/delete-category" id="frm-delete-category-<%= data.id %>">


                              <input type="hidden" value="<%= data.id%>" name="category_id"/>

                            </form>

                          <a href="javascript:void(0)"
                            onclick="if(confirm('Are You sure want to delete ? ')){$
                              ('#frm-delete-category-<%= data.id%>').submit() }"
                            class="btn btn-danger"><i class="fa fa-trash"></i> </a>
                        </td>
                      </tr>
                   <% }) %>
                </tbody>
                <tfoot>
                <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                    
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div> 
        </div>
        </div>
        </div>
        </section>
        
        
        
        
        <%- include("partials/footer.ejs") %>