
<%- include("partials/header.ejs") %>

<style>
  #frm-add-user label.error{
     color: red;
  }
</style>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Edit User</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Edit User</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div>
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-md-12">
        <div class="card card-dark">
          <div class="card-header">
            <h3 class="card-title">Edit User</h3>
          </div>
        <!-- text input -->
        <div class="card-body">
          <form method="post" action="/admin/edit-user/<%= user.id%>" name='frm-add-user' id="frm-add-user">
            <div class="row">
              <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                  <label>Name</label>
                  <input type="text"  value="<%= user.name%>" required class="form-control" placeholder="Enter Name" name="name">
                </div>
              
              
              </div>
              <div class="col-sm-6">
                <!-- text input --> 
                <div class="form-group">
                  <label>Email</label>
                  <input type="email" value="<%= user.email%>" readonly class="form-control" placeholder="Enter Email" name="email">
                </div>
              
              
              </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                      <label>Mobile Number</label>
                      <input type="number" value="<%= user.mobile%>" required class="form-control" placeholder="Enter Name" name="mobile">
                    </div>
                  
                  
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Gender</label>
                     <select class="form-control"  required name="dd_gender">
                      <option value="">Choose Gender</option>
                      <option <% if(user.gender =='male') { %> selected <% } %>    value="male">Male</option>
                      <option   <% if(user.gender =='female') { %> selected <% } %>  value="female">Female</option>
                      <option   <% if(user.gender =='other') { %> selected <% } %>  value="other">Other</option>
    
                     </select>
                    </div>
                  </div>
              </div>

              <div class="row">
              
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Address</label>
                    <textarea required class="form-control" placeholder="Enter Address" name="address"><%= user.address%></textarea>
                  </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Status</label>
                     <select class="form-control" name="status">
                        <option <% if(user.status =='1') { %> selected <% } %>    value="1">Active</option>
                        <option   <% if(user.status =='0') { %> selected <% } %>  value="0">Inactive</option>
    
                     </select>
                    </div>
                  </div>
              </div>
           

           

            <button class="btn btn-dark" type="submit">Submit</button>
       </div>
          </form>
        
        
      
      </div>
      
    </div>
 
  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- /.content-wrapper -->
<%- include("partials/footer.ejs") %>