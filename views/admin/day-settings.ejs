
<%- include("partials/header.ejs") %>

<style>
  #frm-add-days-settings label.error{
    color:red;
  }
</style>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Day Settings</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Day Settings</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div>
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-md-12">
        <div class="card card-dark">
          <div class="card-header">
            <h3 class="card-title">Day Settings</h3>
          </div>
        <!-- text input -->
        <div class="card-body">
          <form method="post" action="/admin/day-settings" id= "frm-add-days-settings">
            <div class="row">
              
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Day Count Value</label>
                <input  class="form-control" type="number" required name="days_count" min ="1" placeholder="Enter Days"> 
                </div>
              </div>
            </div>

            <button class="btn btn-dark" type="submit">Submit</button>
       </div>
          </form>

          <div class="row" style="margin-top: 10px;">
            <div class="col-12">
              <div class="card">
                
                  <!-- /.card-header -->
                  <div class="card-body">
                    <table id="tbl-list-day" class="table table-bordered table-striped">
                      <thead>
                      <tr>
                        <th>#ID</th>
                        <th>Total Days</th>
                        <th>Action</th> 
                        
                      </tr>
                      </thead>
                      <tbody>
                         <% days.forEach(function(data){ %>
                           <tr>
                              <td>
                                <%= data.id%>
                                </td>
                                <td>
                                <%= data.total_days%>
                                </td>
                                <td>
                                  
                                  <form id="frm-delete-days-<%= data.id%>" action="/admin/delete-days/<%= data.id %>" method="post">
                                  <input type="hidden" name="day_id" value="<%= data.id%>"/>
                                  </form>

                                 <a href="javascript:void(0)" class="btn btn-danger"
                                 onclick="if(confirm('Are You sure want to delete ? ')){$
                                  ('#frm-delete-days-<%= data.id%>').submit() }"
                                 > 
                                   <i class="fa fa-trash"></i>
                                 </a>
                                  </td>
                            </tr>
                        <% }) %>
                      </tbody>
                      <tfoot>
                      <tr>
                        <th>#ID</th>
                        <th>Total Days</th>
                        <th>Action</th> 
                          
                      </tr>
                      </tfoot>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div> 
              </div>
            
        
      
      </div>
      
    </div>
 
  </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<!-- /.content-wrapper -->
<%- include("partials/footer.ejs") %>